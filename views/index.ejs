<!-- views/index.ejs -->
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
    <header>
        <% include partials/header %>
    </header>

    <main>
        <!-- input form -->
        <div class="container">
            <row>
                <h1 class="text-center">To-Do List</h1>
                <form class="col-6 mx-auto" action="/newtodo" method="POST">
                    <div class="input-group">
                        <input type="text" class="form-control" name="item" placeholder="Enter todo Item"><span>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </span>
                    </div>
                </form>
            </row>
            <!-- unordered list (ul) -->
            <div class="row">
                <ul class="col-6 mx-auto">
                    <% for(var i = 0; i < todoList.length; i++) { %>
                    <li>
                        <%= todoList[i].task %> </i>
                        <% } %>
                </ul>
            </div>
        </div>
    </main>

    <footer>
        <% include partials/footer %>
    </footer>
</body>

</html>